  "scripts": {
    "compile": "yarn run compile:eth && yarn run compile:starknet",
    "compile:eth": "hardhat compile",
    "compile:starknet": "hardhat starknet-compile --cairo-path 'openzeppelin_cairo/src'",
    "deploy:starknet:devnet": "./src/scripts/deployStarknetContracts.sh devnet",
    "deploy:starknet:testnet": "./src/scripts/deployStarknetContracts.sh testnet",
    "test": "yarn run test:starknet && yarn run test:bridge",
    "test:starknet": "hardhat test test/L2/*.ts --starknet-network devnet",
    "test:bridge": "hardhat test test/L1-L2-messaging/*.ts --starknet-network devnet --network ganache",
    "lint": "solhint contracts/**/*.sol && prettier --check . contracts/**/*.sol"
  }
